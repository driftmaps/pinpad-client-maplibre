{
  "name": "Expo Dev Container",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": { "zsh": { "path": "/bin/zsh" } },
        "editor.formatOnSave": true,
        "eslint.enable": true,
        "files.exclude": {
          "**/node_modules": true
        },
        "java.home": "/usr/lib/jvm/java-11-openjdk-amd64",
        "android.sdkPath": "/home/me/Android/Sdk",
        "terminal.integrated.shell.linux": "/bin/bash"
      },
      "extensions": [
        "esbenp.prettier-vscode",
        "msjsdiag.debugger-for-chrome",
        "ms-azuretools.vscode-docker",
        "ryu1kn.partial-diff"
      ]
    }
  },
  "forwardPorts": [19000, 19001, 19002, 8080],
  "remoteUser": "me",
  "workspaceFolder": "/home/me/drift-pinpad-maplibre",
  "mounts": [
    "source=${localWorkspaceFolder},target=/home/me/pinpad-client-maplibre,type=bind,consistency=cached",
    "type=volume,source=node_modules,target=/home/me/pinpad-client-maplibre/node_modules"
  ],
  "remoteEnv": {
    // Set Expo DevTools to listen on all network interfaces
    "EXPO_DEVTOOLS_LISTEN_ADDRESS": "0.0.0.0",
    // Set Android SDK root path
    "ANDROID_HOME": "/home/me/Android/Sdk",
    // Set JAVA_HOME (ensure it matches java.home in VS Code settings)
    "JAVA_HOME": "/usr/lib/jvm/java-11-openjdk-arm64",
    // Update PATH to include Android SDK tools
    "PATH": "${env:PATH}:/home/me/Android/Sdk/cmdline-tools/latest/bin:/home/me/Android/Sdk/platform-tools",
  //   // Set SSH_AUTH_SOCK to the mounted SSH agent socket
  //   "SSH_AUTH_SOCK": "/ssh-agent"
  // }
}
